<div class="row py-2 border-top">
  <div class="col-4 my-auto">
    <%= staff.name %>
  </div>
  <div class="col-4 offset-4">
    <div class="d-flex justify-content-end">
      <%= link_to "edit", edit_staff_path(staff), class: "btn btn-sm btn-outline-primary me-2" %>
      <%= button_to "delete", staff, method: :delete, class: "btn btn-sm btn-outline-danger" %>
    </div>
  </div>
</div>