<%= turbo_frame_tag product do %>
  <%= bootstrap_form_with(model: product) do |form| %>
    <div class="row py-2 border-top">
      <div class="col-2">
        <%= form.text_field :name,
                            skip_label: true,
                            label_as_placeholder: true,
                            wrapper: false,
                            control_class: "form-control form-control-sm"
        %>
      </div>
      <div class="col-2">
        <%= form.number_field :price,
                            skip_label: true,
                            label_as_placeholder: true,
                            wrapper: false,
                            control_class: "form-control form-control-sm"
        %>
      </div>
      <div class="col-2">
        <%= form.select :product_category_id,
                        ProductCategory.all.order(:id).map { |k| [k.name, k.id] }, 
                        {skip_label: true,
                        label_as_placeholder: true,
                        wrapper: false},
                        {class: "form-select-sm"}
        %>
      </div>
      <div class="col-4">
        <div class="d-flex justify-content-end">
          <%= form.primary class: "btn btn-primary btn-sm me-2" %>
          <%= link_to "キャンセル", product, class: "btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
